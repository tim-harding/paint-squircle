{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "pages*": [
        "./pages/src/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "isolatedModules": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
